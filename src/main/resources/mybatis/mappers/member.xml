<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MemberVO에 추가한 object 만큼 resultMap에 추가  -->
<mapper namespace="mapper.member">
	<resultMap id="memResult" type="memberVO">
		<result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="birth" column="birth" />
        <result property="phone" column="phone" />
        <result property="address" column="address" />
        <result property="address_detail" column="address_detail" />
        <result property="joinDate" column="joinDate" />
        <result property="approval_status" column="approval_status" />
        <result property="approval_key" column="approval_key" />
	</resultMap> 
	
	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from t_member1 order by joinDate desc	 	
      ]]>
	</select>
    
